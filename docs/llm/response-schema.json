{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Harness Blender CLI Envelope",
  "type": "object",
  "required": ["ok", "protocolVersion", "command"],
  "properties": {
    "ok": { "type": "boolean" },
    "protocolVersion": { "type": "string" },
    "command": { "type": "string" },
    "data": { "type": "object" },
    "error": {
      "type": "object",
      "required": ["code", "message", "retryable"],
      "properties": {
        "code": { "type": "string" },
        "message": { "type": "string" },
        "retryable": { "type": "boolean" }
      }
    }
  },
  "allOf": [
    {
      "if": { "properties": { "ok": { "const": true } } },
      "then": { "required": ["data"] }
    },
    {
      "if": { "properties": { "ok": { "const": false } } },
      "then": { "required": ["error"] }
    }
  ]
}

